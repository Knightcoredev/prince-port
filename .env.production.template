# Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values

# =============================================================================
# CORE CONFIGURATION
# =============================================================================
NODE_ENV=production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_TYPE=sqlite3
DATABASE_URL=file:./data/portfolio.db

# SQLite Configuration
SQLITE_DB_PATH=./data/portfolio.db
SQLITE_BACKUP_PATH=./backups/
SQLITE_WAL_MODE=true  # Write-Ahead Logging for better performance
SQLITE_FOREIGN_KEYS=true  # Enable foreign key constraints

# SQLite Performance Optimization
SQLITE_CACHE_SIZE=2000  # Cache size in KB
SQLITE_TIMEOUT=30000  # Busy timeout in milliseconds
SQLITE_JOURNAL_MODE=WAL  # Write-Ahead Logging
SQLITE_SYNCHRONOUS=NORMAL  # Balance between safety and performance

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# Generate new secrets using: npm run generate-secrets
JWT_SECRET=GENERATE_NEW_64_CHAR_SECRET
SESSION_SECRET=GENERATE_NEW_64_CHAR_SECRET
NEXTAUTH_SECRET=GENERATE_NEW_64_CHAR_SECRET
CSRF_SECRET=GENERATE_NEW_64_CHAR_SECRET
BCRYPT_ROUNDS=12

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
# Replace YOUR_DOMAIN.com with your actual domain
NEXTAUTH_URL=https://YOUR_DOMAIN.com
NEXT_PUBLIC_APP_URL=https://YOUR_DOMAIN.com
APP_URL=https://YOUR_DOMAIN.com

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Production SMTP Configuration
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
EMAIL_FROM=noreply@YOUR_DOMAIN.com
EMAIL_TO=contact@YOUR_DOMAIN.com

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=Prince F. Obieze Portfolio
ADMIN_USERNAME=knightdev
ADMIN_EMAIL=admin@YOUR_DOMAIN.com
# Note: Admin password should be handled through secure authentication flow

# =============================================================================
# OAUTH CONFIGURATION (Optional)
# =============================================================================
# Google OAuth (if using NextAuth with Google)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_MAX_SIZE=5242880  # 5MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,image/gif,image/svg+xml

# Cloud Storage (Recommended for Production)
# Uncomment and configure one of these options:

# Cloudinary
# CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
# CLOUDINARY_API_KEY=your-cloudinary-api-key
# CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# AWS S3
# AWS_S3_BUCKET=your-s3-bucket
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=your-aws-region

# Local uploads (not recommended for production)
UPLOAD_PATH=./public/uploads

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=50  # Reduced for production security
RATE_LIMIT_CONTACT_MAX=3  # Stricter contact form limits
RATE_LIMIT_AUTH_MAX=5  # Authentication attempts per window

# Content Security Policy
CSP_ENABLED=true
CORS_ORIGIN=https://YOUR_DOMAIN.com

# Security Headers
HSTS_MAX_AGE=31536000
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# SSL/TLS Configuration
FORCE_HTTPS=true
SSL_REDIRECT=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
CACHE_TTL=3600  # 1 hour
IMAGE_OPTIMIZATION=true
COMPRESSION=true
MINIFY_HTML=true
MINIFY_CSS=true
MINIFY_JS=true

# CDN Configuration (optional)
# CDN_URL=https://cdn.YOUR_DOMAIN.com
# STATIC_ASSETS_URL=https://assets.YOUR_DOMAIN.com

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=error
LOG_FILE=./logs/app.log

# Cloud Logging Services (recommended for production)
# SENTRY_DSN=your-sentry-dsn
# DATADOG_API_KEY=your-datadog-api-key
# LOGTAIL_TOKEN=your-logtail-token

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true

# Analytics Services
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# HOTJAR_ID=your-hotjar-id
# MIXPANEL_TOKEN=your-mixpanel-token

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/api/health

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000  # 24 hours
BACKUP_RETENTION=7  # days

# Cloud Backup Services
# AWS_BACKUP_BUCKET=your-backup-bucket
# BACKUP_ENCRYPTION_KEY=generate-new-32-char-secret

# =============================================================================
# ENVIRONMENT VALIDATION
# =============================================================================
VALIDATE_ENV=true
REQUIRED_ENV_VARS=NODE_ENV,DATABASE_URL,JWT_SECRET,NEXTAUTH_SECRET